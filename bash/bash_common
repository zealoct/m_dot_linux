# terminal language and encoding
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

# general alias
alias l='ls --color=auto'
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias vi="vim"
alias svi='sudo vi'
alias emacs="TERM=xterm-256color emacs"
alias em="emacs"
alias scat='sudo cat'
alias sfind='sudo find'
alias grep='grep --color=auto'
alias du="du -mh --max-depth=1"
alias egrep='egrep --color=auto'
alias rm='rm -i'
alias man='LANG=C man'
alias sbcl="rlwrap -b \$BREAK_CHARS sbcl"
# git
alias gco="git checkout"
alias gst="git status -uno"
alias gstn="git status -unormal"
alias gsta="git status -uall"
alias glg='git log --pretty=format:"%C(yellow)%H %C(blue)%an%C(red) %s %C(reset)%n%cD, %cr" --stat'
alias glg5='git log --pretty=format:"%C(yellow)%H %C(blue)%an%C(red) %s %C(reset)%n%cD, %cr" --stat -n 5'
alias glgo='git log --pretty=format:"%h --- %s --- %aN" --graph'
alias glgo5='git log --pretty=format:"%h --- %s --- %aN" --graph -n5'
alias glgs='git log --pretty=short --graph'
alias glgs5='git log --pretty=short --graph -n 5'
alias glgm='git log --pretty=medium --graph'
alias glgm5='git log --pretty=medium --graph -n 5'
alias gdf='git diff'
alias gb='git branch -av'
alias gbd='git branch -d'
alias gru='git remote update'
alias gru!='git remote update --prune'
alias gad='git add'
alias gcmt='git commit'
alias gcmt!='git commit --amend'
alias gcmtm='git commit -m'
alias gmg='git merge'
alias grb='git rebase'
# tmux
alias tmux="tmux -S /tmp/tmux-hanjinchen -2" # make tmux support 256-color
alias ta='tmux attach -d -t'
alias tls='tmux ls'

# PATH setup
PATH=$HOME/usr/bin/gcc:$PATH
PATH=$HOME/usr/bin:$PATH
export PATH

export LD_LIBRARY_PATH=$HOME/usr/lib:$LD_LIBRARY_PATH

